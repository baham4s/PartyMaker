<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BECFD517"
        android:orientation="horizontal">

        <ImageButton
            android:contentDescription="@string/desc"
            android:layout_marginTop="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#BECFD517"
            android:src="?attr/actionModeCloseDrawable"
            >
        </ImageButton>

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="25dp"
            android:text="nom de l'evenement"
            android:textStyle="italic"
            android:textColor="#6A000000"
            android:textSize="25sp"
            tools:ignore="HardcodedText">
        </TextView>

    </LinearLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#252F3330"
        android:gravity="center">

        <ImageButton
            android:id="@+id/footer_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_border"
            android:onClick="goSettings"
            android:contentDescription="@string/desc"
            android:src="@drawable/settings"


            />

        <ImageButton
            android:id="@+id/footer_calc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/green_border"
            android:onClick="goCalc"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/footer_settings"
            android:contentDescription="@string/desc"
            android:src="@drawable/calculator" />

        <ImageButton
            android:id="@+id/footer_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_border"
            android:onClick="goHome"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/footer_calc"
            android:contentDescription="@string/desc"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/footer_map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_border"
            android:onClick="goMap"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/footer_main"
            android:contentDescription="@string/desc"
            android:src="@drawable/map" />

        <ImageButton
            android:id="@+id/footer_people"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_border"
            android:onClick="goInvite"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/footer_map"
            android:contentDescription="@string/desc"
            android:src="@drawable/letter" />

    </RelativeLayout>

    <!-- Content below header and above footer -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header">

        <TextView
            android:id="@+id/textTitleArdoise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Ardoises"
            android:textSize="20sp"
            tools:ignore="HardcodedText">

        </TextView>


        <ListView
            android:id="@+id/ListViewArdoise"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/textTitleArdoise">

        </ListView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ListViewArdoise"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/add" />



    </RelativeLayout>

</RelativeLayout>