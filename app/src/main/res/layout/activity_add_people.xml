<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BECFD517"
        android:orientation="horizontal">

        <ImageButton
            android:contentDescription="@string/desc"
            android:layout_marginTop="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#BECFD517"
            android:src="?attr/actionModeCloseDrawable"
            >
        </ImageButton>

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="25dp"
            android:text="nom de l'evenement"
            android:textStyle="italic"
            android:textColor="#6A000000"
            android:textSize="25sp"
            tools:ignore="HardcodedText">
        </TextView>

    </LinearLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#252F3330"
        android:gravity="center">

        <ImageButton
            android:id="@+id/footer_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_border"
            android:onClick="goSettings"
            android:contentDescription="@string/desc"
            android:src="@drawable/settings"


            />

        <ImageButton
            android:id="@+id/footer_calc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_border"
            android:onClick="goCalc"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/footer_settings"
            android:contentDescription="@string/desc"
            android:src="@drawable/calculator" />

        <ImageButton
            android:id="@+id/footer_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_border"
            android:onClick="goHome"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/footer_calc"
            android:contentDescription="@string/desc"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/footer_map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/black_border"
            android:onClick="goMap"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/footer_main"
            android:contentDescription="@string/desc"
            android:src="@drawable/map" />

        <ImageButton
            android:id="@+id/footer_people"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/green_border"
            android:onClick="goInvite"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/footer_map"
            android:contentDescription="@string/desc"
            android:src="@drawable/letter" />

    </RelativeLayout>

    <!-- Content below header and above footer -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header">

        <TextView
            android:id="@+id/textAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Ajouter des invitÃ©s"
            android:textSize="20sp"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            android:id="@+id/textParticantadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAdd"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="Participants"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textParticantadd"
            android:layout_marginTop="10dp">

            <ScrollView
                android:id="@+id/scrollUSer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layoutUser1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/user1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:contentDescription="@string/desc"
                            app:srcCompat="@drawable/user" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="name user1"
                            android:textSize="22sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutUser2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layoutUser1"

                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/user2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:contentDescription="@string/desc"
                            app:srcCompat="@drawable/user" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="name user2"
                            android:textSize="22sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutUser3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layoutUser2"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/user3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:contentDescription="@string/desc"
                            app:srcCompat="@drawable/user" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="name user3"
                            android:textSize="22sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layoutUser3"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/user4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:contentDescription="@string/desc"
                            app:srcCompat="@drawable/user" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="name user4"
                            android:textSize="22sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <EditText
                android:id="@+id/zoneMail"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:hint="Saisir le mail"
                android:inputType="textEmailAddress"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/addMail"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/zoneMail"
                android:text="Ajout Mail"
                tools:ignore="HardcodedText" />

            <EditText
                android:autofillHints="name"
                android:inputType="text"
                android:id="@+id/zoneManuel"
                android:layout_width="160dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/zoneMail"
                android:hint="Saisir le nom"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/addManual"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zoneManuel"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/addMail"
                android:text="Ajout manuel"
                tools:ignore="HardcodedText" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>