<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="#61CFD517">

    <EditText
        android:id="@+id/editTextNomDepense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:autofillHints="emailAddress"
        android:hint="Libellé"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextSommeDepense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNomDepense"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autofillHints="name"
        android:fontFamily="sans-serif"
        android:hint="Montant "
        android:inputType="textPassword"
        android:minHeight="48dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/datePickerButton"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSommeDepense"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="time  "
        android:onClick="openDatePicker"
        android:text=""
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonDialogInvite"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePickerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Ajouter une dépense"
        tools:ignore="HardcodedText" />

</RelativeLayout>